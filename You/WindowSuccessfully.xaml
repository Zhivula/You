<Window x:Class="You.WindowSuccessfully"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:You"
        mc:Ignorable="d" Height="100" Width="200" WindowStyle="None" Background="{x:Null}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Closed="ClosedThisWindow" ShowInTaskbar="False">
    <Grid Background="{x:Null}" Margin="5">
        <Border CornerRadius="7" Background="White">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Direction="90" Color="Black" Opacity="0.75"  BlurRadius="10.0" />
            </Border.Effect>
        </Border>
        <Label x:Name="TextLabel" Content="Успешно!" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray" FontSize="20" Margin="-20 0 0 0"/>
        <materialDesign:PackIcon x:Name="Icon" Kind="CheckCircle" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="98 0 0 0" Foreground="#00E676" Height="28" Width="28"/>
    </Grid>
</Window>
